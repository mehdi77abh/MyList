<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layoutDirection="rtl"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/deleteGroupBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/deleteGroup"
        android:drawablePadding="8dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingStart="4dp"
        android:background="?selectableItemBackground"

        app:drawableStartCompat="@drawable/ic_round_delete_forever_24"
        app:drawableTint="@color/black" />

    <TextView
        android:id="@+id/editGroupBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/editGroup"
        android:paddingTop="8dp"
        android:background="?selectableItemBackground"
        android:paddingBottom="8dp"
        android:drawablePadding="8dp"
        android:paddingStart="2dp"
        app:drawableStartCompat="@drawable/ic_round_edit_24"
         />


</LinearLayout>