<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mylist">

    <application
        android:name=".MyApp"
        android:allowBackup="true"
        android:icon="@mipmap/app_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/app_icon_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyList">
        <activity
            android:name=".views.main.MainActivity"
            android:exported="true"

            android:windowSoftInputMode="stateHidden" />

        <activity
            android:name=".views.TaskList.EditTaskActivity"
            android:exported="false" />

        <activity
            android:name=".views.home.editGroupActivity.EditGroupActivity"
            android:exported="false" />

        <activity
            android:name=".views.TaskList.addTask.AddNewTaskActivity"
            android:exported="false" />

        <activity
            android:name=".views.TaskList.TasksListActivity"
            android:exported="false"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".views.home.addGroupActivity.AddNewGroupActivity"
            android:exported="false" />
        <activity
            android:name=".views.splash.SplashActivity"
            android:exported="true"
            android:windowSoftInputMode="stateHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>